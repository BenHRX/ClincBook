<!--pages/ClincDetail/ClincDetail.wxml-->
<view class='Hospital_Summary'>
  <view class='Summary_image'>
    <image src='{{hospital_photo}}'></image>
  </view>
  <view class='Summary_Content'>
    <text>{{HospitalTitle}}</text>
    <text style='color: red;' space='ensp'>门诊: 周一~周日 8:30~17:30</text>
  </view>
</view>

<view class='AddrPhone'>
  <view class='Address' catchtap='onClickAddress'>
    <image src='../../image/icon/location_s.png'></image>
    <view>
      <text>{{hospital_address}}</text>
    </view>
  </view>

  <view class='Phone' catchtap='onClickPhoneCall'>
    <image src='../../image/icon/PhoneIcon.png'></image>
    <view>
      <text>{{hospital_phone}}</text>
    </view>
  </view>
</view>

<view class='ServiceContainer'>
  <text>服务项目</text>
  <view class='ServiceContainerList'>
    <text>{{hospital_service}}</text>
  </view>
</view>

<view class='ServiceContainer'>
  <text>服务语言</text>
  <view class='ServiceContainerList'>
    <text>{{hospital_language}}</text>
  </view>
</view>

<view class='ServiceContainer'>
  <text>乘车路线</text>
  <view class='ServiceContainerList'>
    <text>{{hospital_traffic}}</text>
  </view>
</view>