/* pages/bookPage/ClinicBooking.wxss **/

page {
  height: 100%;
  background-color: #eee;
  font-size: 30rpx;
}

.SearchPanel {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.SearchInput {
  height: 40rpx;
}

.CitySearch {
  display: flex;
  flex-direction: row;
  height: 40rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}

.PositionMark {
  width: 50rpx;
  height: 50rpx;
}
.pickerClass{
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.PullDownMark {
  width: 50rpx;
  height: 50rpx;
}

/* 日历控件css样式 */

.calendar_show {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 15rpx;
  background-color: #fff;
}

.header_date {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.calendar_header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 15rpx;
  background-color: #eee;
}

.calendar_date {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 15rpx;
}

/* .btn_style{
  border-radius: 50%;
  background-color: red;
} */

.btn_like_view {
  border-radius: 50%;
  background-color: #fff;
  height: 50rpx;
  width: 50rpx;
  text-align: center;
}

.btn_like_view_click {
  border-radius: 50%;
  background-color: rgb(233, 76, 76);
  height: 50rpx;
  width: 50rpx;
  text-align: center;
}

.btn_plain_text {
  color: black;
}

.btn_plain_text_click {
  color: white;
}

.disable_plain_text_click {
  color: gray;
}

/* Service Part */

.Department_view {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  background-color: #FFF;
}

.Department_list {
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  margin-top: 25rpx;
}

.Department_container {
  /* text-align: center; */
  /* width: 23%; */
  width: 175rpx;
  height: 50rpx;
  background-color: #EEE;
  font-family: Microsoft-Yahei;
  font-size: 28rpx;
  margin-left: 14rpx;
  display: flex;
  border-radius: 10rpx;
}
.Department_container_click {
  /* text-align: center; */
  width: 175rpx;
  height: 50rpx;
  background-color: blue;
  font-family: Microsoft-Yahei;
  font-size: 30rpx;
  color: white;
  margin-left: 14rpx;
  display: flex;
  border-radius: 10rpx;
}
.department_text{
  margin: auto;
}

/* 选择医院部分 */

.HospitalView {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.HospitalList {
  display: flex;
  flex-direction: column;
  background-color: #FFF;
}

.Hospital_container {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.Hospital_image_view {
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.Hospital_img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
}

.Hospital_summary {
  border-bottom: 2px solid #999;
  /* height: 200rpx; */
  min-height: 150rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 100%;
  padding-bottom: 20rpx;
}

.Hospital_summary text {
  font-family: Microsoft-Yahei;
  font-size: 25rpx;
  word-spacing: 2rpx;
}

.HospitalHeader {
  display: flex;
  flex-direction: row;
  line-height: 50rpx;
  justify-content: space-between;
}

.HospitalHeader text {
  display: table-cell;
  vertical-align: middle;
  font-size: 30rpx;
}

.HospitalHeader image {
  display: table-cell;
  vertical-align: middle;
}